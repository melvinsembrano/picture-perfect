  </head>
  <body>
    <div id="fb-root"></div>
    <script type="text/javascript">
      window.fbAsyncInit = function() {
        FB.init({
          appId      : "<%= @app['id'] %>",                     // App ID
          channelUrl : "<%= url_no_scheme('/channel.html') %>", // Channel File
          status     : true,                                    // check login status
          cookie     : true,                                    // enable cookies to allow the server to access the session
          xfbml      : true                                     // parse XFBML
        });

        // Listen to the auth.login which will be called when the user logs in
        // using the Login button
        FB.Event.subscribe('auth.login', function(response) {
          // We want to reload the page now so Ruby can read the cookie that the
          // Javascript SDK sat. But we don't want to use
          // window.location.reload() because if this is in a canvas there was a
          // post made to this page and a reload will trigger a message to the
          // user asking if they want to send data again.
          // window.location = window.location;
          // FbMe.loadPictures();
        });

        FB.Event.subscribe('auth.statusChange', function(response) {
          FbMe.init();
        });

        FB.Canvas.setAutoGrow();
      };

      // Load the SDK Asynchronously
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>

    <header class="clearfix">
      <% if @user %>
          <p id="picture" style="background-image: url(https://graph.facebook.com/<%= @user['id'] %>/picture?type=normal)"></p>
          <div>
            <h1>Welcome, <strong><%= @user['name'] %></strong></h1>
            <p class="tagline">
              This is your app
              <a href="<%= @app['@app'] %>"><%= @app['name'] %></a>
            </p>
            <div id="share-app">
              <p>Share your app:</p>
              <ul>
                <li>
                  <a href="#" class="facebook-button" id="postToWall" data-url="<%= url %>">
                    <span class="plus">Post to Wall</span>
                  </a>
                </li>
                <li>
                  <a href="#" class="facebook-button speech-bubble" id="sendToFriends" data-url="<%= url %>">
                    <span class="speech-bubble">Send Message</span>
                  </a>
                </li>
                <li>
                  <a href="#" class="facebook-button apprequests" id="sendRequest" data-message="Test this awesome app">
                    <span class="apprequests">Send Requests</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
      <% else %>
        <!--
        <div>
          <h1>Welcome</h1>
            <a href='/auth/facebook' class="fb_button fb_button_medium">
              <span class="fb_button_text">Log In</span>
            </a>

        </div>
        -->

      <% end %>
    </header>

    <header>
        <div id="auth-status">
          <div id="auth-loggedin">
            <a class="fb_button fb_button_medium" href="#" id="auth-loginlink">
              <span class="fb_button_text">Log In</span>
            </a>
          </div>
          <div id="auth-loggedout" style="display:none">
            Hi, <span id="auth-displayname"></span>  
          (<a href="#" id="auth-logoutlink">logout</a>)
        </div>


        <div style="margin-top: 2em;" class="clearfix sample-images">
          <ul id="image_list">
            <li>
              <h1>Picture 1</h1>
              <img src="http://streams.toyota.com.au/static/images/16vkn-toyota-hilux-global-navigation-515x307.jpg" />
            </li>
            <li>
              <h1>Picture 2</h1>
              <img src="http://streams.toyota.com.au/static/vehicles/camry/content/experience-V2/hotspots/img-hero-car-1.png" />
            </li>
             <li>
              <h1>Picture 3</h1>
              <img src="http://streams.toyota.com.au/static/images/16vkn-toyota-prado-global-navigation-515x307.jpg" />
            </li>

          </ul>
        </div>

    </header>

    <script type="text/javascript">

      var FbMe = {
        init: function () {
          if (FbMe.isLoggedIn()) {
            $("#auth-loggedout").show();
            $("#auth-loggedin").hide();
            FbMe.loadPictures();
          } else {
            if (FbMe.reload) {
              window.location = '/'; //window.location;
            }
            $("#auth-loggedout").hide();
            $("#auth-loggedin").show();
            console.info('please login');
          }
        },

        isLoggedIn: function () {
          return FB.getUserID() !== 0;
        },

        loadPictures: function() {

          FB.api('/me/photos?limit=3', function(response){ 
            var data = response.data;
            var list = $("#image_list li");

            for(var i = 0; i < data.length; i++) {
              console.info(data[i]);
              // $(list[i]).find("img").attr("src", data[i].picture);
              $(list[i]).find("img").attr("src", data[i].images[3].source);
            }
          })
        },

        afterFbLoaded: function(callback) {
          if(window.FB) {
            callback();
          } else {
            setTimeout(function() {
              FbMe.afterFbLoaded(callback);
            }, 100);
          }
        }
      };

      $(document).ready(function () {
        $("#auth-loginlink").click(function() {
          FB.login(function() {
          
            },{scope: 'user_about_me,user_photos'});
        });

        $("#auth-logoutlink").click(function() {
          FbMe.reload = true;
          FB.logout();
        });


      });

    </script>

  </body>
</html>
